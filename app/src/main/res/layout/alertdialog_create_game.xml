<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Spinner
        android:id="@+id/spinner_createGame_gameName"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1" />

    <Spinner
        android:id="@+id/spinner_createGame_timemode"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1" />

    <Spinner
        android:id="@+id/spinner_createGame_difficulty"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:spinnerMode="dialog"
        android:contentDescription="@string/difficulty_hint" />

    <Button
        android:id="@+id/btn_createGame_create_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="create game" />


</LinearLayout>